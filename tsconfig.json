{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "lib": ["ES2019", "DOM", "ES6"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": ["./src/__tests__/*.ts", "./dist/**/*"]
}
